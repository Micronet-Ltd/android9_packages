<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <TextView
        android:id="@+id/device_id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_id_imei1" />

    <TextView
        android:id="@+id/device_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_id_name"
        android:text="@string/device_id_number" />

    <ImageView
        android:id="@+id/device_id_icon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/device_id_number"
        android:src="@drawable/device_id_icon1" />

</RelativeLayout>