<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

<item android:state_selected="true" android:drawable="@color/color_orange" />
<item android:state_focused="true" android:drawable="@color/color_orange" />
<item android:state_pressed="true" android:drawable="@color/color_orange" />
<item android:state_selected="false">
	<layer-list>
	    <item>
	        <shape android:shape="rectangle" >
	            <stroke
	                android:width="3dp"
	                android:color="#b2b2b2" />
	            <padding
	                android:bottom="2dp" />

	            <corners android:radius="2dp" />
	        </shape>
	    </item>
	    <item>
	        <shape>
	            <gradient
	                android:angle="90"
	                android:centerColor="#d9d9d9"
	                android:endColor="#eaeaea"
	                android:startColor="#e1e1e1"
	                android:type="linear" />
	
	            <corners android:radius="3dp" />
	        </shape>
	    </item>
	
	</layer-list>
</item>

</selector>