<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
android:layout_gravity="center" 
android:orientation="vertical" 
android:id="@+id/test_motionsenor" 
android:layout_width="fill_parent"  
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_motionsensorinfo" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/test_motionsensor_info" 
    android:layout_alignParentLeft="true" 
    android:layout_alignParentTop="true" />
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_x" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/g_null_text" 
    android:layout_below="@id/ms_tv_motionsensorinfo" 
    android:layout_alignParentLeft="true" />
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_y" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/g_null_text" 
    android:layout_below="@id/ms_tv_x" 
    android:layout_alignParentLeft="true" />
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_tv_z" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/g_null_text" 
    android:layout_below="@id/ms_tv_y" 
    android:layout_alignParentLeft="true" />
    <ImageView android:id="@+id/ms_arrow_down" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_down" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_up" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_up" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_left" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_left" 
    android:layout_centerInParent="true" />
    <ImageView android:id="@+id/ms_arrow_right" 
    android:visibility="invisible" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:src="@drawable/ms_draw_right" 
    android:layout_centerInParent="true" />
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_proximity" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/g_null_text" 
    android:layout_above="@+id/ms_lightsensor"/> 
    <TextView android:textSize="24.0dip" 
    android:id="@+id/ms_lightsensor" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/g_null_text" 
     />
    
    <LinearLayout android:id="@+id/listLinearLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_centerVertical ="true" android:layout_alignParentBottom ="true">
		
		<Button android:id="@+id/btn_success" android:layout_width="150dp" android:layout_height="100dp" android:text="@string/success" android:clickable="true" android:layout_x="20dp" android:layout_y="250dp">
		</Button><Button android:id="@+id/btn_fail" android:layout_width="150dp" android:layout_height="100dp" android:text="@string/fail" android:clickable="true" android:layout_x="100dp" android:layout_y="250dp">
		</Button>
	
</LinearLayout>

</RelativeLayout>