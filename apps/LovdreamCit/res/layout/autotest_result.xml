<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/test_light_sensor"
	android:layout_gravity="center" 
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	<TextView android:textSize="24.0dip" android:id="@+id/autotest_type"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
     	android:layout_alignParentTop="true"
		android:text="@string/null_item" />
	
	<TextView android:textSize="24.0dip" android:id="@+id/item1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/autotest_type" 
		android:maxLines="18" android:text="@string/null_item" />	

	<TextView android:textSize="24.0dip" android:id="@+id/item_name"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/item1" 
		android:text="@string/null_item" />
		
	<TextView android:textSize="24.0dip" android:id="@+id/descript"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/item_name" 
		android:text="@string/null_item" />
	
	 <Button 
	     android:id="@+id/vibration_test" 
	     android:layout_width="fill_parent" 
	     android:layout_height="100dp"
	     android:layout_above="@+id/listLinearLayout"
	     android:text="@string/vibration_test"
	     android:visibility="gone"
     />

	<LinearLayout android:id="@+id/listLinearLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_centerVertical ="true" android:layout_centerHorizontal="true" 
		android:layout_alignParentBottom ="true" android:layout_gravity="center">
		<Button android:id="@+id/btn_success" android:layout_width="150dp"
			android:layout_height="100dp" android:text="@string/success"
			android:clickable="true" android:layout_x="20dp" android:layout_y="250dp">
		</Button>
		
	<Button android:id="@+id/btn_fail" android:layout_width="150dp" android:layout_height="100dp" android:text="@string/fail" android:clickable="true" android:layout_x="100dp" android:layout_y="250dp">
		</Button>
</LinearLayout>

</RelativeLayout>
