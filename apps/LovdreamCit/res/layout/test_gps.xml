<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_gps"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_insert_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_insert_tip" 
        android:visibility="gone"
        android:textSize="20sp"/>

    <TextView 
        android:id="@+id/tv_st_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_st_info"/>
    
    <LinearLayout
        android:id="@+id/test_gps_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_st_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:text="@string/tv_st_success"
            android:textSize="24.0dip" />

        <TextView
            android:id="@+id/tv_st_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/g_null_text"
            android:textSize="24.0dip" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_st_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_null_text" />

