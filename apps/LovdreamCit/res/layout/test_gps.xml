                android:layout_height="wrap_content"
                android:text="@string/g_null_text" />

            <TextView
                android:id="@+id/tv_st_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_null_text" />

            <TextView
                android:id="@+id/tv_st_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/g_null_text" />

            <TextView
